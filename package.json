{
  "name": "vite-boilerplate-ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir ./dist/client",
    "build:server": "vite build --ssr ./src/entry-server.tsx --ssrManifest --outDir ./dist/server",
    "preview": "NODE_ENV=production ts-node-esm server",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "tsc": "tsc"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "sirv": "^2.0.4",
    "vite-plugin-ssr": "^0.4.142"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@stylistic/eslint-plugin-js": "^2.2.2",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "globals": "^15.6.0",
    "sass": "^1.77.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.15.6",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1",
    "vite": "^5.2.10",
    "vite-plugin-eslint": "^1.8.1"
  }
}
